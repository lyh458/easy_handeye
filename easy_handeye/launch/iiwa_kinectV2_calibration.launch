<launch>
    <arg name="namespace_prefix" default="iiwa_kinectV2" />
    <arg name="marker_size" default="0.15" doc="Size of the ArUco marker used, in meters" />
    <arg name="marker_id" default="100" doc="The ID of the ArUco marker used" />
    <arg name="kinect_name" default="kinect2" doc="The name of kinect, the default of kinectV1/xtion is camera, kinectV2 is kinect2" />

    <!-- start camera driver -->
    <include file="$(find kinect2_bridge)/launch/kinect2_bridge.launch" >
        <arg name="publish_tf" value="true" />
        <arg name="depth_method" value="opengl" />
		<arg name="reg_method" value="cpu" />
    </include>

    <!-- start ArUco -->
    <node name="aruco_tracker" pkg="aruco_ros" type="single">
        <!-- <remap from="/camera_info" to="$(arg kinect_name)/rgb/camera_info"/>
        <remap from="/image" to="$(arg kinect_name)/sd/image_color_rect"/> -->
        <remap from="/camera_info" to="$(arg kinect_name)/qhd/camera_info"/>
        <remap from="/image" to="$(arg kinect_name)/qhd/image_color"/>
        <param name="image_is_rectified" value="true"/>
        <param name="marker_size"        value="$(arg marker_size)"/>
        <param name="marker_id"          value="$(arg marker_id)"/>
        <param name="reference_frame"    value="$(arg kinect_name)_link"/>
        <param name="camera_frame"       value="$(arg kinect_name)_rgb_optical_frame"/>
        <param name="marker_frame"       value="camera_marker"/>
    </node>

    <!-- start the robot -->
    <include file="$(find iiwa_moveit)/launch/moveit_planning_execution.launch">
        <arg name="sim" value="false" />
        <arg name="rviz" value="false" />
    </include>

    <!-- start easy_handeye -->
    <include file="$(find easy_handeye)/launch/calibrate.launch" >
        <arg name="namespace_prefix" value="$(arg namespace_prefix)" />
        <arg name="eye_on_hand" value="false" />
        <arg name="start_rviz" value="true"/>
        <arg name="move_group_namespace" value="/iiwa" />
        <arg name="move_group" value="manipulator" />
        <!-- need to copy iiwa_stack_config.rviz to launch/ folder -->
        <arg name="rviz_config_file" value="$(find easy_handeye)/launch/iiwa_stack_config.rviz" />
        <arg name="tracking_base_frame" value="$(arg kinect_name)_link" />
        <arg name="tracking_marker_frame" value="camera_marker" />
        <arg name="robot_base_frame" value="iiwa_link_0" />
        <arg name="robot_effector_frame" value="iiwa_link_ee" />
        <arg name="freehand_robot_movement" value="false" />
        <arg name="robot_velocity_scaling" value="0.5" />
        <arg name="robot_acceleration_scaling" value="0.2" />
    </include>

</launch>